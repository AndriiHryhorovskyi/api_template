{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-plusplus": "off",
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "import/no-unresolved": [0],
    "strict": ["error", "global"]
  },
  "env": {
    "es2020": true,
    "node": true,
    "jest": true,
    "browser": true
  }
}
