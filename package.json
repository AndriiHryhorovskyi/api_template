{
  "name": "new-layout",
  "version": "0.3.0",
  "description": "",
  "main": "src/srver/http.js",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "start": "NODE_ENV=production node src/server/http.js",
    "dev": "nodemon src/server/http.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest unit/* -i --no-cache",
    "test:integration": "jest integration/* -i --no-cache",
    "test:unit:watch": "jest unit/* -i --no-cache --watch",
    "test:integration:watch": "jest integration/* -i --no-cache --watch",
    "lint": "eslint src tests --fix",
    "apidoc": "apidoc -i src/controllers/ -o doc/",
    "release": "standard-version",
    "inspect:cp": "jscpd src/",
    "inspect:deps": "npm audit && snyk test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "pino": "^5.17.0",
    "rc": "^1.2.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "apidoc": "^0.20.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jscpd": "^3.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "pino-pretty": "^3.6.1",
    "prettier": "^1.19.1",
    "snyk": "^1.299.0",
    "standard-version": "^7.1.0",
    "superagent": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ]
  }
}
